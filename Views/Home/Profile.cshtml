@model Product
<div class="container">
    <input type="hidden" asp-for="ProductId">
    <div class="row">
<div class="card mb-3">
  <img src="~/img/@Model.Image" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Description</p>
    <p class="card-text"><small class="text-body-secondary">@Model.Clock</small> Saat</p>
    <div>
    <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-secondary">Edit</a>
    @* <a href="/Home/Delete/@Model.ProductId" class="btn btn-danger">Delete</a> *@
    <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
    </div>
  </div>
</div>
</div>
</div>